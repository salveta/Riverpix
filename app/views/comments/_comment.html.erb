<p>
  <strong>Commenter:</strong>
  <%= comment.user.email %>
</p>
 
<p>
  <strong>Comment:</strong>
  <%= comment.commentbody %>
</p>


<p>
 <% if current_user.id == comment.user_id  %>
    <%= link_to 'Destroy Comment', [comment.post, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>

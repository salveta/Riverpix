<div class='post-view'>
  <p id="notice"><%= notice %></p>


  <p>
    <%= image_tag @post.avatar.url(:medium) %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @post.user.email %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

    <%= social_share_button_tag(@post.title) %>

  </p>
    Quality : <%= rating_for @post, "quality", :enable_half => true %>
    Originality : <%= rating_for @post, "originality", :enable_half => true %>


  <h2>Comments</h2>
  <%= render @post.comments %>

  <h2>Add a comment:</h2>
  <%= render "comments/form" %>

  <div style=" font-size:22px;"> 
    <% if current_user == @post.user %>
      <%= link_to 'Edit post', edit_post_path(@post) %> |
      <%= link_to 'Delete post', @posts, method: :delete, data: { confirm: 'Are you sure?' } %> |   
    <% end %>
    <%= link_to 'Back', posts_path %> 
  </div>
</div>

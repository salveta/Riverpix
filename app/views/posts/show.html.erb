<p id="notice"><%= notice %></p>


<p>
  <%= image_tag @post.avatar.url(:medium) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div style=" font-size:22px;"> 
<%= link_to 'Edit post', edit_post_path(@post) %> |
<%= link_to 'Back home page', posts_path %> |
<%= link_to 'Destroy post', @posts, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
